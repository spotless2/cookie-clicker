<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="326dp"
            android:layout_height="375dp" app:srcCompat="@drawable/cookie" android:id="@+id/cookie"
            android:onClick="cookieClick" android:layout_marginEnd="53dp" android:layout_marginRight="53dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="53dp" android:layout_marginStart="53dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/cookieInfo" android:layout_marginBottom="41dp"
            app:layout_constraintBottom_toTopOf="@+id/shop"/>
    <TextView
            android:text="Cookies: 0"
            android:layout_width="213dp"
            android:layout_height="120dp" android:id="@+id/cookieInfo"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="86dp" android:layout_marginStart="86dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" android:layout_marginEnd="57dp" android:layout_marginRight="57dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/cookie" android:textSize="34sp" android:textStyle="bold"
            android:fontFamily="casual" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shop"
            android:layout_marginTop="34dp"
            android:onClick="openShop"
            app:layout_constraintTop_toBottomOf="@+id/cookie" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="#1B34D6"/>
</androidx.constraintlayout.widget.ConstraintLayout>