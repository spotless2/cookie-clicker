<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Shop">

    <EditText
            android:layout_width="106dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:text="Price: "
            android:ems="10"
            android:id="@+id/txtPrice"
            android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/btnDouble" android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"/>
    <EditText
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="Price: "
            android:ems="10"
            android:id="@+id/txtPrice2"
            android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/btnAutoclicker" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="406dp"/>
    <ImageView
            android:layout_width="78dp"
            android:layout_height="65dp" app:srcCompat="@drawable/x2" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtPrice"/>
    <EditText
            android:layout_width="282dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:text="Double cookie/click"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            android:textSize="24sp" android:textStyle="italic" android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="52dp" android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"/>
    <EditText
            android:layout_width="282dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:text="Autoclicker"
            android:ems="10"
            android:id="@+id/editTextTextPersonName3"
            android:textSize="24sp" android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/btnDouble"
            android:layout_marginLeft="213dp" android:layout_marginStart="213dp"
            app:layout_constraintStart_toEndOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/imageView2" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Buy"
            android:layout_width="142dp"
            android:layout_height="50dp" android:id="@+id/btnDouble"
            android:onClick="buyDouble"
            app:backgroundTint="#FF9800" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName3" android:layout_marginEnd="135dp"
            android:layout_marginRight="135dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/txtPrice"/>
    <Button
            android:text="Buy"
            android:layout_width="142dp"
            android:layout_height="50dp" android:id="@+id/btnAutoclicker"
            android:onClick="buyAutoclicker"
            app:backgroundTint="#FF9800"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="406dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/txtPrice2" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="135dp"
            android:layout_marginRight="135dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="88dp" app:srcCompat="@drawable/cursor_png100721" android:id="@+id/imageView2"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPrice"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/textView3"
            android:layout_marginEnd="44dp" android:layout_marginRight="44dp" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/txtPrice2" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Doubles the cookies you get per click."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:layout_marginEnd="43dp"
            android:layout_marginRight="43dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnDouble"
            android:layout_marginLeft="51dp" android:layout_marginStart="51dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"/>
    <TextView
            android:text="Extra 2 clicks per second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" android:layout_marginEnd="134dp"
            android:layout_marginRight="134dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="11dp" app:layout_constraintBottom_toTopOf="@+id/btnAutoclicker"/>
    <TextView
            android:text="Cookies: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/shopCookies"
            android:textStyle="bold" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" android:layout_marginEnd="146dp" android:layout_marginRight="146dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"/>
    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnBack"
            android:onClick="mainScreen"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="81dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <ImageView
            android:layout_width="570dp"
            android:layout_height="221dp" app:srcCompat="@drawable/giphy" android:id="@+id/imageView3"
            android:layout_marginTop="78dp"
            app:layout_constraintTop_toTopOf="@+id/btnAutoclicker" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnBack"/>
</androidx.constraintlayout.widget.ConstraintLayout>